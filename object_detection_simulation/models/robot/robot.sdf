<?xml version="1.0" ?>
<sdf version="1.7">
    <!-- robot model -->
    <model name='robot' canonical_link='base_link'>
      <pose>0 2 0.325 0 -0 0</pose>

        <!-- base link -->
        <link name='base_link'>
            <pose>-0.151427 -0 0.175 0 -0 0</pose>
            <inertial>
                <mass>5</mass>
                <inertia>
                    <ixx>0.126164</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.416519</iyy>
                    <iyz>0</iyz>
                    <izz>0.481014</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <box>
                        <size>2.01142 1 0.568726</size>
                    </box>
                </geometry>
                <material>
                    <ambient>0.5 0.5 1.0 1</ambient>
                    <diffuse>0.5 0.5 1.0 1</diffuse>
                    <specular>0.0 0.0 1.0 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <box>
                        <size>2.01142 1 0.568726</size>
                    </box>
                </geometry>
            </collision>
        </link>

        <!-- left wheel link -->
        <link name='left_wheel'>
            <pose>0.554283 0.6 -0.025 -1.5707 0 0</pose>
            <inertial>
                <mass>2</mass>
                <inertia>
                    <ixx>0.145833</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.145833</iyy>
                    <iyz>0</iyz>
                    <izz>0.125</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.3</radius>
                        <length>0.2</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0.2 0.2 0.2 1</ambient>
                    <diffuse>0.2 0.2 0.2 1</diffuse>
                    <specular>0.2 0.2 0.2 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.3</radius>
                        <length>0.2</length>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1</mu>
                            <mu2>1</mu2>
                            <slip1>0.035</slip1>
                            <slip2>0</slip2>
                            <fdir1>0 0 1</fdir1>
                        </ode>
                        <bullet>
                            <friction>1</friction>
                            <friction2>1</friction2>
                            <rolling_friction>0.1</rolling_friction>
                        </bullet>
                    </friction>
                </surface>
            </collision>
        </link>

        <!-- left wheel joint  -->
        <joint name='left_wheel_joint' type='revolute'>
            <parent>base_link</parent>
            <child>left_wheel</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>
                    <upper>1.79769e+308</upper>
                </limit>
            </axis>
        </joint>

        <!-- right wheel link -->
        <link name='right_wheel'>
            <pose>0.554282 -0.6 -0.025 -1.5707 0 0</pose>
            <inertial>
                <mass>2</mass>
                <inertia>
                    <ixx>0.145833</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.145833</iyy>
                    <iyz>0</iyz>
                    <izz>0.125</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.3</radius>
                        <length>0.2</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0.2 0.2 0.2 1</ambient>
                    <diffuse>0.2 0.2 0.2 1</diffuse>
                    <specular>0.2 0.2 0.2 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.3</radius>
                        <length>0.2</length>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1</mu>
                            <mu2>1</mu2>
                            <slip1>0.035</slip1>
                            <slip2>0</slip2>
                            <fdir1>0 0 1</fdir1>
                        </ode>
                        <bullet>
                            <friction>1</friction>
                            <friction2>1</friction2>
                            <rolling_friction>0.1</rolling_friction>
                        </bullet>
                    </friction>
                </surface>
            </collision>
        </link>

        <!-- right wheel joint -->
        <joint name='right_wheel_joint' type='revolute'>
            <parent>base_link</parent>
            <child>right_wheel</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>
                    <upper>1.79769e+308</upper>
                </limit>
            </axis>
        </joint>

        <!-- caster wheel link -->
        <link name='caster'>
            <pose>-0.957138 -0 -0.125 0 -0 0</pose>
            <inertial>
                <mass>1</mass>
                <inertia>
                    <ixx>0.1</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.1</iyy>
                    <iyz>0</iyz>
                    <izz>0.1</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <sphere>
                        <radius>0.2</radius>
                    </sphere>
                </geometry>
                <material>
                    <ambient>0.2 0.2 0.2 1</ambient>
                    <diffuse>0.2 0.2 0.2 1</diffuse>
                    <specular>0.2 0.2 0.2 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <sphere>
                        <radius>0.2</radius>
                    </sphere>
                </geometry>
            </collision>
        </link>

        <!-- caster wheel joint -->
        <joint name='caster_wheel' type='ball'>
            <parent>base_link</parent>
            <child>caster</child>
        </joint>

        <!-- Camera link -->

        <link name="camera_front">
            <pose relative_to="base_link">2.012 0 -0.05 0 0 0</pose>
        </link>

        <joint name="camera_front_joint" type="fixed">
            <child>camera_front</child>
            <parent>base_link</parent>
        </joint>

        <!-- camera optical frame -->
        <link name="camera_front_optical_frame">
            <pose relative_to="base_link">0 0 0 -1.57 0 -1.57</pose>
            <sensor name="color" type="camera">
                <pose>0 0 0 0 -1.57 1.57</pose>
                <update_rate>20</update_rate>
                <always_on>1</always_on>
                <visualize>true</visualize>
                <topic>/camera/color</topic>
                <camera>
                    <horizontal_fov>1.22</horizontal_fov>
                    <image>
                        <width>1280</width>
                        <height>720</height>
                        <format>R8G8B8</format>
                    </image>
                    <clip>
                        <near>0.1</near>
                        <far>50</far>
                    </clip>
                    <lens>
                        <intrinsics>
                        <!-- fx = fy = width / ( 2 * tan (hfov / 2 ) ) -->
                        <fx>914</fx>
                        <fy>914</fy>
                        <!-- cx = ( width + 1 ) / 2 -->
                        <cx>640.5</cx>
                        <!-- cy = ( height + 1 ) / 2 -->
                        <cy>360.5</cy>
                        <s>0</s>
                        </intrinsics>
                    </lens>
                    <noise>
                        <type>gaussian</type>
                        <mean>0</mean>
                        <stddev>0.007</stddev>
                    </noise>
                </camera>
            </sensor>
        </link>

        <joint name="camera_front_optical_joint" type="fixed">
            <child>camera_front_optical_frame</child>
            <parent>camera_front</parent>
        </joint>

        <!-- camera depth frame -->
        <link name="camera_depth_frame">
            <pose relative_to="camera_front">0 0 0 0 0 0</pose>
            <sensor name="depth" type="depth_camera">
                <pose>0 0 0 0 0 0</pose>
                <update_rate>6</update_rate>
                <always_on>1</always_on>
                <camera>
                    <horizontal_fov>1.22</horizontal_fov>
                    <image>
                        <width>640</width>
                        <height>480</height>
                        <format>R_FLOAT32</format>
                    </image>
                    <clip>
                        <near>0.1</near>
                        <far>3</far>
                    </clip>
                    <lens>
                        <intrinsics>
                        <fx>421.61578369140625</fx>
                        <fy>421.61578369140625</fy>
                        <cx>422.2854309082031</cx>
                        <cy>236.57237243652344</cy>
                        <s>0</s>
                        </intrinsics>
                    </lens>
                </camera>
            </sensor>
        </link>

        <joint name="camera_depth_joint" type="fixed">
            <child>camera_depth_frame</child>
            <parent>camera_front</parent>
        </joint>
        

        

        <!-- 3D LiDAR link  -->
        <link name="lidar_link">

            <pose relative_to="base_link">0.55 0 0.3 0 0 0</pose>

            <inertial>
                <mass>1.2</mass>
                <inertia>
                    <ixx>0.001087473</ixx>
                    <iyy>0.001087473</iyy>
                    <izz>0.001092437</izz>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyz>0</iyz>
                </inertia>
            </inertial>

            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.08</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0.2 0.2 0.2 1</ambient>
                    <diffuse>0.2 0.2 0.2 1</diffuse>
                    <specular>0.2 0.2 0.2 1</specular>
                </material>
            </visual>

            <collision name="collision">
                <geometry>
                    <cylinder>
                        <radius>.08</radius>
                        <length>.05</length>
                    </cylinder>
                </geometry>
            </collision>

            <sensor type="ray" name="sensor">

            <!-- Position the ray sensor based on the specification. Also rotate
                it by 90 degrees around the X-axis so that the <horizontal> rays
                become vertical -->
                <pose>0 0 -0.004645 1.5707 0 0</pose>

                <!-- Enable visualization to see the rays in the GUI -->
                <visualize>true</visualize>

                <topic>lasescan</topic>
                <!-- Set the update rate of the sensor -->
                <update_rate>30</update_rate>
                <ray>
                    <!-- The scan element contains the horizontal and vertical beams.
                        We are leaving out the vertical beams for this tutorial. -->
                    <scan>
                        <!-- The horizontal beams -->
                        <horizontal>
                            <!-- The velodyne has 32 beams(samples) -->
                            <samples>32</samples>

                            <!-- Resolution is multiplied by samples to determine number of
                                simulated beams vs interpolated beams. See:
                                http://sdformat.org/spec?ver=1.6&elem=sensor#horizontal_resolution
                                -->
                            <resolution>1</resolution>

                            <!-- Minimum angle in radians -->
                            <min_angle>-0.53529248</min_angle>

                            <!-- Maximum angle in radians -->
                            <max_angle>0.18622663</max_angle>
                        </horizontal>
                    </scan>

                    <!-- Range defines characteristics of an individual beam -->
                    <range>
                        <!-- Minimum distance of the beam -->
                        <min>0.05</min>

                        <!-- Maximum distance of the beam -->
                        <max>70</max>

                        <!-- Linear resolution of the beam -->
                        <resolution>0.02</resolution>
                    </range>
                </ray>
            </sensor>
        </link>

        <joint name="lidar_joint" type="revolute">
            <pose>0 0 -0.036785 0 0 0</pose>

            <child>lidar_link</child>
            <parent>base_link</parent>

            <axis>

                <!-- Revolve around the z-axis -->
                <xyz>0 0 1</xyz>

                <!-- Limit refers to the range of motion of the joint -->
                <limit>
                    <!-- Use a very large number to indicate a continuous revolution -->
                    <lower>-10000000000000000</lower>
                    <upper>10000000000000000</upper>
                </limit>
            </axis>
        </joint>

        <!-- lidar plugin -->

        <!-- differential drive plugin -->
        <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>1.2</wheel_separation>
            <wheel_radius>0.2</wheel_radius>
            <odom_topic>/odom</odom_topic>
            <odom_publish_frequency>20</odom_publish_frequency>
            <frame_id>robot/odom</frame_id>
            <child_frame_id>robot/base_link</child_frame_id>
            <topic>/cmd_vel</topic>
            <tf_topic>/tf</tf_topic>
        </plugin>

        <plugin filename="libignition-gazebo-pose-publisher-system.so" name="ignition::gazebo::systems::PosePublisher">
            <publish_link_pose>true</publish_link_pose>
            <publish_collision_pose>false</publish_collision_pose>
            <publish_visual_pose>false</publish_visual_pose>
            <publish_sensor_pose>true</publish_sensor_pose>
            <publish_nested_model_pose>false</publish_nested_model_pose>
            <use_pose_vector_msg>true</use_pose_vector_msg>
            <update_frequency>20</update_frequency>
        </plugin>

    </model>

</sdf>